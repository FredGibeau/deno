{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Deno - Unstable Http",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--allow-net",
        "--allow-plugin",
        "--allow-read",
        "--allow-write",
        "--unstable",
        "--inspect",
        "-A",
        "server.ts"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    }
  ]
}
